{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["@react-native-community", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "prettier/prettier": "error",
    "comma-dangle": [2, "always-multiline"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
